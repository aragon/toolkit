{
  "name": "@aragon/ui",
  "version": "0.3.0",
  "main": "src/index.js",
  "module": "lib/index.js",
  "license": "GPL-3.0",
  "scripts": {
    "build": "babel src --out-dir lib --copy-files",
    "watch": "babel --watch src --out-dir lib --copy-files",
    "flow": "flow",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "theme:build": "scripts/oco-json.js < src/theme/Aragon.oco > src/theme/aragon.json",
    "deploy:site": "cd gallery && npm run build:production && echo 'ui.aragon.one' > dist/CNAME && cp public/favicon.svg dist && gh-pages -d dist",
    "publish": "npm publish --access public",
    "start": "cd gallery && npm start"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.58.0",
    "gh-pages": "^1.0.0",
    "opencolor": "^0.2.0",
    "opencolor-converter": "git://github.com/opencolor-tools/opencolor-converter.git#v2.1.21",
    "prettier": "^1.7.4"
  },
  "dependencies": {
    "react-click-outside": "tj/react-click-outside",
    "react-motion": "^0.5.2",
    "styled-components": "^2.2.1"
  }
}
